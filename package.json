{
  "name": "pokedex",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest --colors -c e2e/jest.config.js",
    "test:unit": "jest --colors --maxWorkers=3",
    "test:watch": "jest --colors --maxWorkers=3 --watch",
    "test:coverage": "jest --colors --maxWorkers=3 --coverage",
    "lint": "eslint \"**/*.{js,ts,html}\"",
    "lint:fix": "eslint \"**/*.{js,ts,html}\" --fix",
    "format": "prettier \"**/*.{ts,html,scss}\" --check",
    "format:fix": "prettier \"**/*.{ts,html,scss}\" --write"
  },
  "engines": {
    "node": "^16.14.0 || ^18.10.0  || >= 20.3.0"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.1.0",
    "@angular/cdk": "^16.1.1",
    "@angular/common": "^16.1.0",
    "@angular/compiler": "^16.1.0",
    "@angular/core": "^16.1.0",
    "@angular/forms": "^16.1.0",
    "@angular/material": "^16.1.1",
    "@angular/platform-browser": "^16.1.0",
    "@angular/platform-browser-dynamic": "^16.1.0",
    "@angular/router": "^16.1.0",
    "@ngxs/store": "^3.8.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.1.0",
    "@angular-eslint/builder": "^16.2.0",
    "@angular-eslint/eslint-plugin": "16.0.3",
    "@angular-eslint/eslint-plugin-template": "16.0.3",
    "@angular-eslint/schematics": "^16.2.0",
    "@angular-eslint/template-parser": "16.0.3",
    "@angular/cli": "~16.1.0",
    "@angular/compiler-cli": "^16.1.0",
    "@ngxs/devtools-plugin": "^3.8.1",
    "@types/jest": "^29.5.2",
    "@types/jest-environment-puppeteer": "^5.0.3",
    "@typescript-eslint/eslint-plugin": "5.59.7",
    "@typescript-eslint/parser": "5.59.7",
    "eslint": "^8.43.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-rxjs": "^5.0.3",
    "jest": "^29.5.0",
    "jest-preset-angular": "^13.1.1",
    "jest-puppeteer": "^9.0.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "~5.1.3"
  }
}
